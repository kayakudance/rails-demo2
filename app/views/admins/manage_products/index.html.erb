<h1>商品管理</h1>
<h2><%= link_to '+ 商品登録', new_admins_manage_product_path, class: 'btn btn-success ' %></h2>

<div class="table-responsive">
  <table class="table w-auto">
    <thead class="table-light text-center">
    <tr>
      <th scope="col">id</th>
      <th scope="col">編集</th>
      <th scope="col">削除</th>
      <th scope="col">おすすめ</th>
      <th scope="col">商品名</th>
    </tr>
    </thead>
    <tbody>
    <% @products.each do |product| %>
    <tr class="text-center">
      <th scope="row" class="align-middle"><%= product.id %></th>
      <td><%= link_to '編集', edit_admins_manage_product_path(product), class: "btn btn-primary"%></td>
      <td><%= link_to '削除', admins_manage_product_path(product), class: "btn btn-danger", method: :delete %></td>
      <td class="align-middle"><%= recommended_flag_to_mark(product) %></td>
      <td class="align-middle"><%= product.name %></td>
    </tr>
    <% end %>

    </tbody>
  </table>
  <%= paginate @products %>
</div>