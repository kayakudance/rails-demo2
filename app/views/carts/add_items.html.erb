<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h3 class="mt-3">以下の商品がカートに入りました</h3>
      <hr>
        <%= image_tag @product.image, class: "cart-image" %>

        <span class="ms-5"><%= @product.name %></span>
        <span class="ms-5">¥<%= @product.price %></span>
      <hr>
      <div class="text-center">
        <%= link_to '←商品一覧へ', products_path, class: "mb-2"  %>
        <%= link_to 'カートへ→',  cart_path, class: "ms-2"%>
      </div>

    </div>
  </div>
</div>