<h1>カートの中身</h1>
<hr>
<h2>カートの金額合計: <%= current_user.cart.calculate_total_price %>円</h2>
<% @cart_items.each do |cart_item| %>

    <%= link_to product_path(cart_item.product) do %>
    <h2><%= cart_item.product.name %></h2>
    <% end %>

    <h3>個数: <%= cart_item.quantity %></h3>

    <%= form_with url: update_cart_item_quantity_path, method: :patch, local: true do |f| %>
      <%= f.hidden_field :product_id, value: cart_item.product.id %>
      <%= f.select :modified_quantity,[*1..10] %>
      <h3>商品単価: <%= cart_item.product.price %>円</h3>
      <h3>商品合計: <%= cart_item.calculate_price %>円</h3>
      <%= f.submit '個数の変更' %>
    <% end %>

    <%= link_to 'カートから商品を削除', destroy_cart_item_path(cart_item: cart_item), method: :delete %>
  <hr>

<% end %>


