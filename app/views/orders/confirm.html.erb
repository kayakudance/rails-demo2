<div class="container">
  <div class="row justify-content-center">
    <div class="col-8">
      <h1>注文確認</h1>
      <hr class="mt-3">

        <div class="row">
          <div class="col-3">
            <h5 class="mb-4">１ お届け先</h5>
          </div>
          <div class="col-9">

            <div class="row col-8 ms-0 mb-2">
              <h6 class="ps-0"><%= @order.address_name %></h6>
            </div>

            <div class="row col-8 ms-0 mb-2">
              <h6 class="ps-0">〒 <%= @order.zip %></h6>
            </div>

            <div class="row col-8 ms-0 mb-2">
              <h6 class="ps-0"><%= @order.address %></h6>
            </div>

            <div class="row col-8 ms-0 mb-2">
              <h6 class="ps-0"><%= @order.tel %></h6>
            </div>

          </div>
          <hr class="mt-3">

          <div class="col-3">
            <h5 class="mb-4">２ お支払い方法</h5>
          </div>
          <div class="col-9">
            <%= @order.paymethod %>
          </div>
          <hr class="mt-3">

          <div class="col-3">
            <h5 class="mb-4">3 注文商品</h5>
          </div>
          <div class="col-9 row">
            <div class="col-md-9">
              <% @user_cart.cart_items.each do |cart_item| %>
                <div class="row border p-3 mb-3 me-3">

                  <div class="col-4">
                    <%= image_tag cart_item.product.image, class: "w-75" %>
                  </div>

                  <div class="col-8">
                    <div class="d-flex flex-column h-100">
                      <h4><%= cart_item.product.name %></h4>
                      <div class="mb-auto">¥<%= cart_item.product.price %></div>
                      <div class="mb-auto">数量: <%= cart_item.quantity %></div>
                    </div>
                  </div>

                </div>
              <% end %>
            </div>
          </div>
          <hr class="mt-3">

          <div class="col-3 d-flex align-items-center">

              <%= form_with model: @order , method: :post, class: "w-100", local: true do |f| %>
                <%= f.hidden_field :address_name %>
                <%= f.hidden_field :address %>
                <%= f.hidden_field :zip %>
                <%= f.hidden_field :tel %>
                <%= f.hidden_field :paymethod %>
                <%= f.hidden_field :bill %>
                <%= f.submit '注文を確定', class: "btn btn-warning d-block w-100" %>
              <% end %>

          </div>

          <div class="col-9 d-flex align-items-center">
            <h5 class="m-0">請求額:  ¥<%= @bill %></h5>
          </div>

          <div class="row justify-content-center">

          </div>

        </div>




    </div>
  </div>
</div>