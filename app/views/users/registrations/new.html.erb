<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-5">
      <h3 class="mt-3">新規登録</h3>
      <hr>

      <%= form_with model: User.new, url: '/users', local:true do |f| %>

        <div class="form-group mb-2">
          <%= f.label :name, 'ユーザーネーム', class: 'form-label' %><br/>
          <%= f.text_field :name,
                           class: "form-control #{"is-invalid" if alert}",
                           autofocus: true,
                           autocomplete: "email"
          %>
        </div>
        <% if resource.errors.messages[:name].present? %>
          <strong class="validation-error">※ <%= resource.errors.full_messages_for(:name).first %></strong>
        <% end %>

        <div class="form-group mb-2">
          <%= f.label :email, 'メールアドレス', class: 'form-label' %><br/>
          <%= f.email_field :email,
                            class: "form-control #{"is-invalid" if alert}",
                            autofocus: true,
                            autocomplete: "email"
          %>
        </div>
        <% if resource.errors.messages[:email].present? %>
          <strong class="validation-error">※ <%= resource.errors.full_messages_for(:email).first %></strong>
        <% end %>

        <div class="form-group mb-2">
          <%= f.label :password, 'パスワード', class: 'form-label'%><br />
          <%= f.password_field :password,
                               class: "form-control #{"is-invalid" if alert}",
                               autofocus: "true",
                               autocomplete: "current-password"
          %>
        </div>
        <% if resource.errors.messages[:password].present? %>
          <strong class="validation-error">※ <%= resource.errors.full_messages_for(:password).first %></strong>
        <% end %>

        <div class="form-group mb-2">
          <%= f.label :password_confirmation, 'パスワード(確認用)', class: 'form-label'%><br />
          <%= f.password_field :password_confirmation,
                               class: "form-control #{"is-invalid" if alert}",
                               autofocus: "true",
                               autocomplete: "current-password"
          %>
        </div>
        <% if resource.errors.messages[:password_confirmation].present? %>
          <strong class="validation-error">※ <%= resource.errors.full_messages_for(:password_confirmation).first %></strong>
        <% end %>

        <hr>
        <div class="form-group text-center mb-3">
          <%=  f.submit " 登録する", class: "mt-3 btn btn-primary w-100" %>
        </div>
      <% end %>

      <%= link_to 'ログイン', new_user_session_path %>

    </div>
  </div>
</div>