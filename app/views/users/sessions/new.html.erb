<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-5">
      <h3 class="mt-3">ログイン</h3>
      <hr>

      <% if notice %><p class="notice"><%= notice %></p><% end %>
      <% if alert %><p class="alert alert-danger"><%= alert %></p><% end %>

      <%= form_with model: User.new, url: '/users/sign_in', local:true do |f| %>

        <div class="form-group mb-2">
          <%= f.label :email, 'メールアドレス', class: 'form-label' %><br/>
          <%= f.email_field :email,
                            class: "form-control #{"is-invalid" if alert}",
                            autofocus: true,
                            autocomplete: "email"
          %>
        </div>

        <div class="form-group mb-4">
          <%= f.label :password, 'パスワード', class: 'form-label'%><br />
          <%= f.password_field :password,
                               class: "form-control #{"is-invalid" if alert}",
                               autofocus: "true",
                               autocomplete: "current-password"
          %>
        </div>
        <hr>
        <div class="form-group text-center mb-3">
          <%=  f.submit "ログイン", class: "mt-3 btn btn-primary w-100" %>
        </div>

      <% end %>
      <%= link_to '新規登録', new_user_registration_path %>

    </div>
  </div>
</div>
